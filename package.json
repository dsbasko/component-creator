{
  "name": "create-component-helper",
  "displayName": "Component Creator",
  "description": "üß¨ Create file structure based on your templates",
  "version": "2.3.0",
  "engines": { "vscode": "^1.70.0" },
  "icon": "assets/icon.png",
  "license": "MIT",
  "publisher": "dsbasko",
  "author": { "name": "Dmitriy Basenko" },
  "homepage": "https://github.com/dsbasko/component-creator",
  "repository": {
    "type": "git",
    "url": "https://github.com/dsbasko/component-creator"
  },
  "bugs": { "url": "https://github.com/dsbasko/component-creator/issues" },
  "categories": ["Other"],
  "keywords": [
    "File create",
    "File structure",
    "Create structure",
    "Create component",
    "Python component",
    "React component",
    "Vue component",
    "Angular component"
  ],
  "activationEvents": ["onCommand:component-creator.AddComponent"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "component-creator.AddComponent",
        "title": "New component..."
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "component-creator.AddComponent",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "component-creator.AddComponent",
          "group": "navigation",
          "when": "editorHasSelection"
        }
      ]
    },
    "configuration": {
      "title": "—Åomponent-—Åreator",
      "properties": {
        "componentCreatorHelper.templateDirectory": {
          "type": "string",
          "default": "./.vscode/cch-template",
          "description": "The directory where the templates will be stored."
        },
        "componentCreatorHelper.language": {
          "type": "string",
          "default": "en",
          "enum": ["en", "ru"],
          "description": "Pop-up language."
        }
      }
    }
  },
  "scripts": {
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/lodash": "^4.14.185",
    "@types/node": "18.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/vsce": "^2.16.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "lodash": "^4.17.21",
    "typescript": "^4.9.4" 
  }
}
